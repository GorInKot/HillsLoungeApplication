<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HillsLoungeApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/luxury_light_primary</item>
        <item name="colorPrimaryVariant">@color/luxury_light_accent1</item>
        <item name="colorOnPrimary">@color/luxury_light_text_primary</item>

        <!-- Цвет фона -->
        <item name="background">@color/luxury_light_background</item>
        <item name="colorOnBackground">@color/luxury_light_text_primary</item>

        <!-- Цвета поверхностей -->
        <item name="colorSurface">@color/luxury_light_secondary</item>
        <item name="colorOnSurface">@color/luxury_light_text_secondary</item>

        <!-- Вторичные цвета -->
        <item name="colorSecondary">@color/luxury_light_accent2</item>
        <item name="colorOnSecondary">@color/luxury_light_text_primary</item>

        <!-- Цвета текста -->
        <item name="android:textColorPrimary">@color/luxury_light_text_primary</item>
        <item name="android:textColorSecondary">@color/luxury_light_text_secondary</item>

        <!-- Специфические стили -->
        <item name="buttonStyle">@style/ButtonStyle.HookahBar.Light</item>
    </style>

    <!-- Стиль кнопок для светлой темы -->
    <style name="ButtonStyle.HookahBar.Light" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/luxury_light_primary</item>
        <item name="android:textColor">@color/luxury_light_text_primary</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:textSize">18sp</item>
    </style>

