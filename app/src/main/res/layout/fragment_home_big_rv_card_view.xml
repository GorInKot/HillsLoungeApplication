<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/background_variant_alter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_big_rv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Title of cardView"
            android:textColor="@color/textColor"
            android:textSize="28sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/id_tv_big_rv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/accentColor"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:drawablePadding="2dp"
            android:text="Some description"
            />

        <ImageView
            android:id="@+id/id_iv_big_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:maxHeight="250dp"
            android:src="@drawable/hills_sal_new"
            android:background="@drawable/rounded_image"
            android:clipToOutline="true"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>