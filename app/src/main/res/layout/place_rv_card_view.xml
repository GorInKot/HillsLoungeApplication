<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?android:attr/colorBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/tv_title_place_rv_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_address_place_rv_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="атфыслсьы осщтфылс воылстыфсьылфтсугцщашов"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintTop_toBottomOf="@id/tv_title_place_rv_card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:paddingEnd="50dp"/>

        <ImageView
            android:id="@+id/iv_place_rv_card_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/hills_sal"
            app:layout_constraintTop_toBottomOf="@id/tv_address_place_rv_card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/tv_time_place_rv_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мы работаем до 01:00"
            android:textSize="20sp"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintTop_toBottomOf="@id/iv_place_rv_card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>