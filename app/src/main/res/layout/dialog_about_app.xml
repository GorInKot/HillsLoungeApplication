<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mainColor"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_variant_alter"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Версия 1.0.0"
            android:textColor="@color/mainColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мобильное приложение сети Hills Lounge.\nНовости и акции всегда у Вас под рукой."
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Многофункциональный сервис, который включает систему лояльности сети Hills Loungs и мониторинг новостей бренда."
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="designed by"
            android:textColor="@color/accentColor"
            android:textSize="16sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s1_Dan"
            android:textColor="@color/accentColor"
            android:textSize="21sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

<!--        <Button-->
<!--            android:id="@+id/ok_button"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Отлично"-->
<!--            android:textSize="18sp"-->
<!--            android:textColor="@color/textColor"-->
<!--            android:background="@drawable/transparent_background_bordered"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:padding="12dp"-->
<!--            android:layout_marginBottom="20dp"/>-->

        <Button
            android:id="@+id/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отлично"
            android:textSize="18sp"
            android:textColor="@color/textColor"
            android:background="@drawable/button_border"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>


</LinearLayout>
