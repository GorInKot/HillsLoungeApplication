<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_bottom_sheet"
    android:layout_gravity="center"
    android:elevation="15dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Забронировать столик"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:textColor="@color/accentColor"
        />

    <!-- Выбор даты -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="День брони:"
        android:textSize="22sp"
        android:paddingTop="8dp"
        android:textColor="@color/textColor"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        />

    <NumberPicker
        android:id="@+id/datePicker"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/number_picker_rounded"
        android:padding="8dp"
        />

    <!-- Выбор даты и времени -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Время брони:"
        android:textSize="22sp"
        android:paddingTop="8dp"
        android:textColor="@color/textColor"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <NumberPicker
        android:id="@+id/timePicker"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/number_picker_rounded"
        android:padding="8dp"
        />

    <!-- Выбор количества гостей -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Количество гостей"
        android:textSize="22sp"
        android:paddingTop="8dp"
        android:textColor="@color/accentColor"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="22sp"
            style="@style/ButtonStyle.HookahBar.Light_Variant"
            android:background="@drawable/transparent_background_bordered_button"
            />

        <TextView
            android:id="@+id/guestCount"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="2 гостя"
            android:textSize="20sp"
            android:padding="16dp"
            android:textColor="@color/textColor"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="22sp"
            style="@style/ButtonStyle.HookahBar.Light_Variant"
            android:background="@drawable/transparent_background_bordered_button"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnReserve"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="Забронировать"
        style="@style/ButtonStyle.HookahBar.Light"
        android:textSize="22sp"
        android:layout_gravity="center"
        />

</LinearLayout>
