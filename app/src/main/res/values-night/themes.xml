<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HillsLoungeApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/luxury_dark_primary</item>
        <item name="colorPrimaryVariant">@color/luxury_light_accent1</item>
        <item name="colorOnPrimary">@color/luxury_light_text_primary</item>

        <!-- Цвет фона -->
        <item name="android:windowBackground">@color/luxury_dark_background</item>
        <item name="colorOnBackground">@color/luxury_dark_primary</item>

        <!-- Цвета поверхностей -->
        <item name="colorSurface">@color/luxury_light_secondary</item>
        <item name="colorOnSurface">@color/luxury_light_text_secondary</item>

        <!-- Вторичные цвета -->
        <item name="colorSecondary">@color/luxury_light_accent2</item>
        <item name="colorOnSecondary">@color/luxury_light_text_primary</item>

        <!-- Цвета текста -->
        <item name="android:textColorPrimary">@color/luxury_light_text_primary</item>
        <item name="android:textColorSecondary">@color/luxury_light_text_secondary</item>

        <!-- Специфические стили -->
        <item name="buttonStyle">@style/ButtonStyle.HookahBar</item>
    </style>

    <!-- Темная тема -->
    <style name="Base.Theme.HillsLoungeApplication.Dark" parent="Base.Theme.HillsLoungeApplication">
        <!-- Переопределение цветов для тёмной темы -->
        <item name="colorPrimary">@color/luxury_dark_primary</item>
        <item name="colorPrimaryVariant">@color/luxury_dark_accent1</item>
        <item name="colorOnPrimary">@color/luxury_dark_text_primary</item>

        <item name="android:windowBackground">@color/luxury_dark_background</item>
        <item name="colorOnBackground">@color/luxury_dark_text_primary</item>

        <item name="colorSurface">@color/luxury_dark_secondary</item>
        <item name="colorOnSurface">@color/luxury_dark_text_secondary</item>

        <item name="colorSecondary">@color/luxury_dark_accent2</item>
        <item name="colorOnSecondary">@color/luxury_dark_text_primary</item>

        <item name="android:textColorPrimary">@color/luxury_dark_text_primary</item>
        <item name="android:textColorSecondary">@color/luxury_dark_text_secondary</item>
    </style>

    <!-- Стиль кнопок -->
    <style name="ButtonStyle.HookahBar" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


</resources>